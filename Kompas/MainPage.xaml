<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kompas.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                x:Name="lbHodnotaKompasu"
                Text="---"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            <Entry x:Name="entZprava" Keyboard="Text" Placeholder="Tajná zpráva" MaxLength="10" FontSize="22" />
            <Button x:Name="btnPosliZpravu" Text="Pošli tajnou zprávu" Clicked="btnPosliZpravu_Clicked" />
            <Button x:Name="btnInfoZarizeni" Text="Info o zařízení" Clicked="btnInfoZarizeni_Clicked" />
            <Button x:Name="btnVibrujUwU" Text="VibrujUwU" Clicked="btnVibrujUwU_Clicked" />
            <Button x:Name="btnBattery" Text="Baterie" Clicked="Battery_Clicked" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
